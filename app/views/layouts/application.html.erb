<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= "#{yield(:title)} | " if content_for?(:title) %>
      Resident
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-hill">
    <nav class="navbar">
      <div class="wrapper">
        <div class="navbar__flex">
          <div>
            <h1 class="navbar__logo">
              <%= link_to root_path do %>
                <%= image_tag 'icon.svg' %>
                Resident
              <% end %>
            </h1>
          </div>
          <div>
            <% if signed_in? %>
              <%= link_to sign_out_path, class: 'navbar__action', method: :delete do %>
                <%= image_tag current_user.gravatar_url, class: 'navbar__avatar' %>
                Sign out
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>

    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |name, msg| %>
          <p class="flash-<%= name %>"><%= msg %></p>
        <% end %>
      </div>
    <% end %>
  </body>
</html>
